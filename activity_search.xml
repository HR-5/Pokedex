<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Id"
        android:textAlignment="center"
        android:inputType="numberSigned"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/pokese"
        app:layout_constraintEnd_toEndOf="@+id/pokese"
        app:layout_constraintStart_toStartOf="@+id/pokese"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/itemse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Search Item"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pokese"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="search pokemon"
        android:textStyle="bold|italic"
        android:background="@drawable/round"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toTopOf="@+id/itemse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/locse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/round"
        android:text="Search Location"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemse" />
</androidx.constraintlayout.widget.ConstraintLayout>